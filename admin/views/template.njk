{% extends 'layout.njk' %}{% block content %}<div class="container mt100"><h1 class="center">{{title}}</h1><div class="row"><div class="col s12 m6"><h3>entries list</h3><form role="form" way-data="entries"><div class="form-group"><a href="#" way-action-push="entries">Add entry</a></div><div class="form-group" way-repeat="entries"><div><div class="item-entry"><h5>entries</h5>{% for item in config.entriesData %}<label>{{item}}</label><input type="text" class="form-control" placeholder="{{item}}" way-data="{{item}}"> {% endfor %}</div><a href="#" way-action-remove="entries.$$key">Remove entry</a></div></div></form></div><div class="col s12 m6"><h3>JSON output</h3><pre way-data="__all__" way-json="true" way-default="{}" class=""></pre><div class="col s6"><button class="btn btn-default" way-clear>Clear data</button></div><form role="form" action="/update{{title}}" method="post"><div class="col s6"><button type="submit" class="btn btn-default right">Save changes</button></div><input type="text" id="toUpdate" name="toUpdate" class="form-control" way-data="__all__" way-json="false" way-default="{}" hidden></form></div></div></div>{% endblock %}{%block scripts%}<script>way.set("entries", {{data.entries|dump|safe}});</script>{% endblock %}
